<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Order</title>
</head>
<body>
    <div id="side-menu"><%- include('./partials/header.ejs') %></div>
    <div id="background"></div>
    <div id="submit-info-body">
        <div class="submit-info-main">
            <form action="/orders" method="POST">
                <%let trackNumber = Math.floor(Math.random() * 9000000 + 1000000)%>
                <input type="hidden" name="tracking" id="" value="<%=trackNumber%>">
                <div class="list-ui"><div class="row-ui">Customer</div><div class="input-data-holder"><input type="text" name="client" id="" class="input-data" placeholder="Customer"></div></div>
                <div class="list-ui"><div class="row-ui">Status</div><div class="input-data-holder"><input type="text" name="status" id="" class="input-data" placeholder="1-Active 2-Delivered"></div></div>
                <div class="list-ui"><div class="row-ui"></div><div class="row-ui-data"><button class="submit-data">Submit</button></div></div>    
            </form>     
        </div>
    </div>
</body>
</html>